<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#E65100"> <!-- Color del ripple (naranja oscuro) -->

    <item>
        <selector>
            <!-- Estado presionado -->
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="#E65100"/> <!-- Naranja oscuro -->
                    <corners android:radius="8dp"/>
                </shape>
            </item>

            <!-- Estado normal -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FF9800"/> <!-- Naranja normal -->
                    <corners android:radius="8dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
